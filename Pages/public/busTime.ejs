<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Hamburger Menu Example</title>
  <link rel="stylesheet" type="text/css" href="busTime.css" />

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <script src="stopsData.json"></script>

</head>

<body class="main-body">
  <div class="hamburger-menu">
    <nav class="navbar navbar-expand-md navbar-light bg-orange">
      <div class="container">
        <a class="main-title" href="#">GOVA BUS</a>
        <!-- Hamburger Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navigation Menu -->
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Route</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">Bus time</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Settings</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <div class="container">
    <h2 class="text-center mt-5 mb-3">Enter Bus Stop</h2>
    <div class="form-group">
      <select class="form-select form-select-lg mb-3 stop-select" aria-label=".form-select-lg example" id="stopSelect" onchange="handleStopSelect()">
        <option selected>Open this select menu</option>
        <% Object.keys(groupedStops).forEach(function(stopName) { %>
          <option value="<%= stopName %>"><%= stopName %></option>
        <% }); %>
      </select>
    </div>
  </div>
  <div class="container stops mt-5" id="stopsContainer">
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    const groupedStops = <%- JSON.stringify(groupedStops) %>;

    function handleStopSelect() {
      const stopSelect = document.getElementById("stopSelect");
      const selectedStop = stopSelect.options[stopSelect.selectedIndex].value;
      const stopsContainer = document.getElementById("stopsContainer");

      // Clear previous stops
      stopsContainer.innerHTML = "";

      const stopInfo = groupedStops[selectedStop];

      Object.keys(stopInfo).forEach(function(routeName) {
        const nextStop = stopInfo[routeName].nextStopName;
        const nextStopTime = stopInfo[routeName].nextStopTime;

        const stopHTML = `
          <div class="row bg-secondary stop-row">
            <div class="col">
              <h5>${routeName}</h5>
              <p>Next Stop: ${nextStop}</p>
              <p>Arrival: ${nextStopTime}</p>
            </div>
          </div>
        `;

        stopsContainer.insertAdjacentHTML("beforeend", stopHTML);
      });
    }
  </script>
</body>

</html>